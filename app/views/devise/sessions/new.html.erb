<div class="container" style="align-content: center; width: 350px;" >

  <div class="form-control" style="width: 325px; height:340px;" >

<h3 class="text-center">Iniciar sesión</h3>
    <div class="container" >

      <i class="fa fa-user-circle" style="width: 50px; height: 50px; font-size:90px;color:#0066ff; position: relative;left: 90px;"></i>
      <!--<img src="assets/usr.jpg"style=" width: 100px; height: 100px;" />--></div>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field" style="width: 300px;">
    <%= f.label :username, 'Usuario' %><br />
    <%= f.text_field :username, autofocus: true, autocomplete: "username", class:'form-control', :required => true %>
  </div>

  <div class="field" style="width: 300px;">
    <%= f.label :password, 'Contraseña' %><br />
    <%= f.password_field :password, autocomplete: "current-password" , class:'form-control' , :required => true %>
  </div>

    <br>

  <div class="text-center" style="align:center;">
    <%= f.submit "Iniciar" , class:'btn btn-primary'%>
  </div>
<% end %>

<%#= render "devise/shared/links" %>
</div>
</div>