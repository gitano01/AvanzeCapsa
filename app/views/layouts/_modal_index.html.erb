<div class="container">
  <br>
  <!-- Modal -->
  <div class="modal fade" id="ModalIndex" tabindex="-1" role="dialog" aria-labelledby="ModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
      <div class="modal-content">
        <div class="modal-header" >
          <!-- titulo del modal -->
          <h5 class="modal-title" id="#ModalLongTitle">Eliminar</h5>
          <!-- cierre de la ventana modal-->
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body" id="ModalBodyIndex">
          <%#= label_tag '¿Está seguro de eliminar '+ @controladorSingular +'?' %>
          <%#= '¿Está seguro de eliminar?' %>
        </div>
        <div class="modal-footer">
          <%= link_to 'Aceptar', '#',id:'btnAceptarEliminacion',method: :delete, class: 'btn btn-primary btn-sm'%>
          <%= link_to 'Cancelar', '#', class:'btn btn-danger btn-sm', data: { dismiss: "modal" } %>
        </div>
      </div>
    </div>
  </div>
</div>