<div class="container">
  <br>
  <!-- Modal -->
  <div class="modal fade" id="ModalForm" tabindex="-1" role="dialog" aria-labelledby="ModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
      <div class="modal-content">
        <div class="modal-header" >
          <!-- titulo del modal -->
          <h5 class="modal-title" id="#ModalLongTitle">Cancelar</h5>
          <!-- cierre de la ventana modal-->
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          <% if @creacion %>
            ¿Está seguro de cancelar la creación?
          <% else %>
            ¿Está seguro de cancelar la modificación?
          <% end %>
        </div>
        <div class="modal-footer">
          <%= link_to 'Aceptar',{controller: @controlador, method: 'index'}, class:'btn btn-primary btn-sm' %>
          <%= link_to 'Cancelar', '#' ,class:'btn btn-danger btn-sm', data: { dismiss: 'modal' } %>
        </div>
      </div>
    </div>
  </div>
</div>