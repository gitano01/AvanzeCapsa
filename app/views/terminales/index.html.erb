<h4 class="text-center">Catálogo de Terminales</h4><br>
    <%if Inventario.all.size > 0 %>
      <% if Sucursal.all.size >0 %>
          <% if @terminales.all.size > 0 %>
            <table class="table table-bordered table-sm">
              <thead class="bg-primary  text-light">
              <th>Nombre</th>
              <th>Sucursal</th>
              <th>Inventario</th>
              <th width="10%" colspan="4">Opciones</th>
              </thead>
              <tbody>
              <% @terminales.each do |terminal| %>
                <tr>
                  <td> <%= terminal.nombre %> </td>
                  <td><%= terminal.sucursal.nombre %></td>
                  <td><%= terminal.inventario.nombre%> </td>
                  <td><%= link_to terminal   do %><%= fa_icon "eye" %> <br><% end %></td>
                  <td><%= link_to edit_terminal_path(terminal), title: 'Modificar' do %><%= fa_icon "edit"%> <% end %></td >
                  <td><%= link_to ( fa_icon 'trash'), '#',data: { toggle: 'modal', target: '#ModalIndex' },onclick:('cambiarId('+terminal.id.to_s+',"'+@controlador.to_s+'");return false;').to_s %></td>
                </tr>
              <% end %>
              </tbody>
            </table>
            <div class="text-center">
              <table class="table align-content-center">
                <tr>
                  <td><%= link_to 'Nueva', new_terminal_path, class: 'btn btn-primary btn-sm'%><br></td>
                </tr>
              </table>
            </div>
          <% else %>
            <div class="text-center">
              <h5><%= "No existen terminales actualmente"%></h5><br>
              <table class="table align-content-center">
                <tr>
                  <td><%= link_to 'Nueva', new_terminal_path, class: 'btn btn-primary btn-sm' %></td><br>
                </tr>
              </table>
            </div>
          <% end %>
      <% else %>
        <div class="text-center">
          <h5><%= "No es posible gestionar el catálogo. No existe una sucursal"%></h5><br>
          <table class="table align-content-center">
            <tr>
              <td><%= link_to 'Nueva', new_sucursal_path, class: 'btn btn-primary btn-sm' %><br></td>
            </tr>
          </table>
        </div>
      <% end %>
    <% else %>
      <div class="text-center">
        <h5><%= "No es posible gestionar el catálogo. No existe un inventario"%></h5><br>
        <table class="table align-content-center">
          <tr>
            <td><%= link_to 'Nuevo', new_inventario_path, class: 'btn btn-primary btn-sm' %><br></td>
          </tr>
        </table>
      </div>
    <%end%>
