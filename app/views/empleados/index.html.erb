
<h4 class="text-center">Cat√°logo de Empleados</h4><br/>
<% if @empleados.size > 0 %>
	<table class="table table-bordered table-sm table-hover">
		<thead class="bg-primary text-white">
			<tr>
				<th>Nombre</th>
				<th>Ap. Paterno</th>		
				<th>Ap. Materno</th>
				<th>Registro</th>
				<th colspan="3" class="text-center">Opciones</th>
			</tr>
		</thead>
		<tbody>
			<% @empleados.each do |empleado| %>
				<tr>
					<td><%= empleado.nombre_completo %></td>
					<td><%= empleado.apellido_paterno %></td>
					<td><%= empleado.apellido_materno %></td>
					<td><%= empleado.fecha_registro %></td>
					<td class="text-center"><%= link_to empleado do %>
							<%= fa_icon 'eye', title: 'Mostrar' %>
						<% end %>
					</td>
					<td class="text-center"><%= link_to edit_empleado_path(empleado) do %>
							<%= fa_icon 'edit', title: 'Modificar' %>
						<% end %>
					</td>
			        <td class="text-center">
			               <%= link_to (fa_icon 'trash'), '#', data: { toggle: 'modal', target: '#ModalIndex' } ,
		                            onclick:('cambiarIdYNombre('+empleado.id.to_s+',"'+@controlador.to_s+'","'+ @controladorSingular.to_s+'","'+ (empleado.nombre_completo + ' ' + empleado.apellido_paterno + ' ' + empleado.apellido_materno)+'");return false;'),
		                            title: 'Eliminar'
		                	%>
			        </td>
				</tr>
			<% end %>
		</tbody>
	</table>
<% else %>
	<h5 class="text-center">No existen Empleados actualmente</h5>
<% end %>
<table class="table text-center">
	<tr>
		<td><%= link_to 'Nuevo', new_empleado_path, class: 'btn btn-sm btn-primary' %></td>
	</tr>
</table>
  