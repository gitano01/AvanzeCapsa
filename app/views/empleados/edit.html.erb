<br/>

<%= form_tag :action => :actualiza, :id => @empleado.id do %>
	<div class="row">
		<div class="col-md-6">
			<%= render 'formempleado' %>
		</div>
		<div class="col-md-6">
			<%= render 'formusuario' %>
		</div>
	</div>
	<div class="text-center">
